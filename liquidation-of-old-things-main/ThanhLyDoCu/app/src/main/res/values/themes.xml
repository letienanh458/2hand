<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#800000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Menu Style-->
    <style name="navigationTheme">

        <!--Color of text and icon when SELECTED-->
        <item name="colorPrimary">@color/Brown</item>
        <!--Background color when SELECTED-->
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/Gray</item>
        <item name="colorControlActivated">#A89C2B</item>
    </style>

    <style name="Theme.Test.Fullscreen" parent="Theme.Test">
        <item name="android:actionBarStyle">@style/Widget.Theme.Test.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ThanhLyDoCu.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="productDetailTheme">

        <!--Color of text and icon when SELECTED-->
        <item name="colorPrimary">#0000</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>