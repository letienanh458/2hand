<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:id="@+id/autoard1"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/auction_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/auction_img_1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/auction_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/Green"
            android:fontFamily="@font/muli_black"
            android:text="10,000đ"/>

        <TextView
            android:id="@+id/auction_title"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đấu giá Iphone 13 Pro Max xanh dương"
            android:textSize="15sp"
            android:textColor="@color/Gray"
            android:fontFamily="@font/muli_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------------------------"
            android:textColor="@color/Orange"/>

        <TextView
            android:id="@+id/auction_time"
            android:drawableTint="@color/Green"
            android:drawableStart="@drawable/auction_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="59:99"
            android:textColor="@color/Green"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>